<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <View
        android:id="@+id/background_incoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/background_incoming_button" />

    <View
        android:id="@+id/background_overlay_incoming"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:alpha="0.1"
        android:background="@drawable/background_incoming_overlay_button" />

    <com.voxeet.uxkit.views.internal.rounded.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"
        app:mutate_background="true"
        app:oval="true" />

</FrameLayout>